<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ubicationdetaildialogfragment"
    android:background="@drawable/ubi" >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Ubicationdetaildialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/centrocultural717fdb0c495b4118ff2701c947a5d5c5"/>



            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp"
                android:layout_margin="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/TVitemscheduledetaildialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Auditorio Principal UNS"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:textColor="@color/black"
                        android:fontFamily="casual"
                        android:gravity="center"/>


                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">


                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/mapssssssss" />

                        <TextView
                            android:id="@+id/TVItemSpeaker1detaildialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Direccion Lugar."
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">


                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/telefonoooo" />

                        <TextView
                            android:id="@+id/TVItemSpeaker2detaildialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Telefono"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="272dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">


                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/worldicooon" />

                        <TextView
                            android:id="@+id/TVItemSpeaker3detaildialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sitio Web."
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
  </com.google.android.material.appbar.AppBarLayout>
</FrameLayout>