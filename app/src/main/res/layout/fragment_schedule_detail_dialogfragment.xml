<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.schedule_detail_dialogfragment">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/TBscheduledetaildialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/asdsad800x600tedta"
                        android:scaleType="centerCrop"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/azularonti"
                        android:alpha="0.25"/>

                    <TextView
                        android:id="@+id/TVscheduledetaildialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:text="ARQUITECTURA DE MICROSERVICIOS"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp"
                    android:layout_margin="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/TVitemscheduledetaildialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16:30"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:textColor="@color/black"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/TVitemscheduledetaildialog1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MICROSERVICIOS"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/TVitemscheduledetaildialog2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jeff Bezos"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            android:textColor="@color/black"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/TVitemscheduledetaildialog3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Explora la arquitectura de microservicios: diseño, implementación, escalabilidad y resiliencia para aplicaciones modernas y de alto rendimiento.
"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</FrameLayout>